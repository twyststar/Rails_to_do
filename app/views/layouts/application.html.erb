<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">

      <%= flash[:alert] %>
      <%= flash[:notice] %>
      <div class="jumbotron">
        <h1>To-do</h1>
      </div>
      
      <%= yield %>

    </div>
  </body>
</html>
